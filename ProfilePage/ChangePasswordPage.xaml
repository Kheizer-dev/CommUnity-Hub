<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommUnity_Hub.ChangePasswordPage"
             Title="Change Password"
             Background="Transparent">

    <Frame HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" WidthRequest="500" HasShadow="True">
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand" Spacing="10">
            <Label Text="Select a User" FontSize="Large" />
            <Picker x:Name="UserPicker" Title="Select User" />
            <Label Text="New Password" FontSize="Medium" Margin="0,20,0,0" />
            <Entry x:Name="NewPasswordEntry" IsPassword="True" Placeholder="Enter new password" />
            <Label Text="Confirm Password" FontSize="Medium" Margin="0,20,0,0" />
            <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Confirm new password" />
            <Button Text="Change Password" Clicked="OnChangePasswordClicked" Margin="0,20,0,0" />
            <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="LightGray" />
        </StackLayout>
    </Frame>
</ContentPage>
